<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_statique"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maste.projet.SalleActivity"
    android:background="#2962ff">

    <TextView
        android:text="Salle "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/titre_salle"
        android:textAllCaps="false"
        android:textColor="#82b1ff"
        android:textSize="60dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:text="Temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titre_salle"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_degree"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#82b1ff"/>

    <TextView
        android:text="Salle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_salle"
        android:textAllCaps="false"
        android:layout_alignBaseline="@+id/text_degree"
        android:layout_alignBottom="@+id/text_degree"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textSize="20dp"
        android:textColor="#82b1ff"/>

    <TextView
        android:text="date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_date"
        android:layout_alignBaseline="@+id/text_degree"
        android:layout_alignBottom="@+id/text_degree"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:textSize="20dp"
        android:textColor="#82b1ff"
        android:background="@android:color/transparent"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_degree"
        android:layout_centerHorizontal="true"
        android:id="@+id/listView"
        android:divider="@android:color/background_light"
        android:layout_marginTop="19dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_below="@+id/listView"
        android:textAllCaps="false"
        android:text="Mesure"/>

</RelativeLayout>
